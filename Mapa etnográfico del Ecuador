                population: "91,376 habitantes",
                description: "Zamora Chinchipe está en el sur de la región Amazónica. Su capital es Zamora.",
                ethnicGroups: ["Mestizos (80.3%)", "Indígenas (15.6%)", "Blancos (2.1%)", "Afroecuatorianos (1.4%)", "Montubios (0.2%)", "Otros (0.4%)"]
            }
        };

        // Crear marcadores para cada provincia
        for (var provinceName in provinces) {
            if (provinces.hasOwnProperty(provinceName)) {
                var province = provinces[provinceName];
                var marker = L.marker(province.position).addTo(map);
                
                marker.province = provinceName;
                marker.on('click', function(e) {
                    showProvinceInfo(this.province);
                });
                
                marker.bindPopup("<b>" + provinceName + "</b><br>" + province.population + "<br>Haz clic para más información");
            }
        }
        
        // Función para mostrar información de la provincia
        function showProvinceInfo(provinceName) {
            var province = provinces[provinceName];
            
            // Actualizar información en el panel
            document.getElementById('region-name').textContent = "Provincia de " + provinceName;
            document.getElementById('region-population').textContent = province.population;
            document.getElementById('province-description').textContent = province.description;
            
            // Actualizar grupos étnicos
            var ethnicGroupsContainer = document.getElementById('ethnic-groups');
            ethnicGroupsContainer.innerHTML = '';
            
            province.ethnicGroups.forEach(function(group) {
                var badge = document.createElement('span');
                badge.className = 'ethnic-badge';
                badge.textContent = group;
                ethnicGroupsContainer.appendChild(badge);
            });
            
            // Mover el mapa a la provincia seleccionada
            map.setView(province.position, 8);
        }
        
        // Control de capas base
        document.getElementById('satellite-btn').addEventListener('click', function() {
            map.removeLayer(streetLayer);
            satelliteLayer.addTo(map);
            this.classList.add('active');
            document.getElementById('street-btn').classList.remove('active');
        });
        
        document.getElementById('street-btn').addEventListener('click', function() {
            map.removeLayer(satelliteLayer);
            streetLayer.addTo(map);
            this.classList.add('active');
            document.getElementById('satellite-btn').classList.remove('active');
        });
    </script>
</body>
</html>
